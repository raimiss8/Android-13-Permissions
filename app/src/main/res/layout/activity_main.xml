<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/img_deny_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_deny_image"/>

            <ImageView
                android:id="@+id/img_given_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_given_image"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Read Media Images"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/imges"/>

        </LinearLayout>




        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/img_deny_video"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_deny_video"/>

            <ImageView
                android:id="@+id/img_given_video"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_given_video"
                android:visibility="gone"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Read Media Video"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/videos"/>


        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/img_deny_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_deny_audio"/>

            <ImageView
                android:id="@+id/img_given_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_given_audio"
                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Read Media Audio"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/audio"/>



        </LinearLayout>



        <Button
            android:id="@+id/btn_check_all_permissions"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Check All Permissions"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#000"
            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>